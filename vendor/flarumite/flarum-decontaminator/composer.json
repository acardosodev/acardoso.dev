{
  "name": "flarumite/flarum-decontaminator",
  "description": "Apply content checks to discussions/posts using regex",
  "keywords": [
    "flarum"
  ],
  "type": "flarum-extension",
  "license": "MIT",
  "require": {
    "flarum/core": "^0.1.0-beta.13"
  },
  "authors": [
    {
      "name": "Ian Morland",
      "email": "ian@flarumite.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "Flarumite\\PostDecontaminator\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Flarumite\\Tests\\Decontaminator\\": "tests/",
      "Flarumite\\Tests\\Decontaminator\\Stubs\\": "tests/Stubs/"
    }
  },
  "extra": {
    "flarum-extension": {
      "title": "Flarumite Post Decontaminator",
      "icon": {
        "name": "far fa-eye-slash",
        "backgroundColor": "#008000",
        "color": "#fff"
      }
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^8.5",
    "mockery/mockery": "^1.3"
  }
}
